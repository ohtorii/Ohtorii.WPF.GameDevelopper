        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestWidgets"
        mc:Ignorable="d"
        Title="MainWindow" Height="344" Width="800">
    <Grid>
        <local:IntControl x:Name="intHp" Value="{Binding HitPoint}" HorizontalAlignment="Left" Margin="69,61,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="51,204,0,0" TextWrapping="Wrap" Text="{Binding HitPoint}" VerticalAlignment="Top" Width="146"/>
        <Button x:Name="button" Content="Dec" HorizontalAlignment="Left" Margin="111,143,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <local:NumPadControl HorizontalAlignment="Left" Margin="488,159,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
